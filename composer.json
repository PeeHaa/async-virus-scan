{
    "name": "peehaa/async-virus-scan",
    "description": "Library for async checking files against online virus scanners",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Pieter Hordijk",
            "email": "info@pieterhordijk.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^7.2",
        "amphp/artax": "^3.0.14",
        "amphp/process": "^0.3.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.3.4 || ^8.0.0",
        "slevomat/coding-standard": "^4.7",
        "squizlabs/php_codesniffer": "^3.3.1"
    },
    "autoload": {
        "psr-4": {
            "PeeHaa\\AsyncVirusScan\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PeeHaa\\AsyncVirusScanTest\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    }
}
